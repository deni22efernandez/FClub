@model FClub.Models.Models.ViewModels.ActivittyUpdateVM
<h4>Update activity</h4>
<hr />
<form method="post" enctype="multipart/form-data">
	<div class="row">

		<div class="col-6">
			<input type="hidden" asp-for="Activity.Id" />
			<input type="hidden" asp-for="Activity.CurrentCapacity" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="@Model.Activity.ActivittyName" class="control-label"></label>
				<input asp-for="@Model.Activity.ActivittyName" class="form-control" />
				<span asp-validation-for="@Model.Activity.ActivittyName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Activity.TotalCapacity" class="control-label"></label>
				<input asp-for="@Model.Activity.TotalCapacity" class="form-control" />
				<span asp-validation-for="@Model.Activity.TotalCapacity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Instructor</label>
				<select asp-for="@Model.Activity.InstructorId" class="form-control" asp-items="Model.InstructorList"></select>
				<span asp-validation-for="@Model.Activity.InstructorId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Activity.ActivittyDays" class="control-label"></label>
				<select asp-for="@Model.DaysSelected" class="form-control" asp-items="Model.WeekDays"></select>
				<span asp-validation-for="@Model.Activity.ActivittyDays" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Activity.PricePerMonth" class="control-label"></label>
				<input asp-for="@Model.Activity.PricePerMonth" class="form-control" />
				<span asp-validation-for="@Model.Activity.PricePerMonth" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Activity.PricePer3Months" class="control-label"></label>
				<input asp-for="@Model.Activity.PricePer3Months" class="form-control" />
				<span asp-validation-for="@Model.Activity.PricePer3Months" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Activity.FreePass" class="control-label"></label>
				<input asp-for="@Model.Activity.FreePass" class="form-control" />
				<span asp-validation-for="@Model.Activity.FreePass" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Activity.FromToPeriodId" class="control-label"></label>
				<select asp-for="@Model.Activity.FromToPeriodId" class="form-control" asp-items="Model.FromToPeriodList"></select>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Activity.Image" class="control-label"></label>
				<input type="file" name="files" multiple class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Update" class="btn btn-primary" />
			</div>
		</div>
		<div class="col-6">
			@if (Model.Activity.Image != null)
			{

				<input type="hidden" asp-for="Activity.Image" />
				<img src="@Model.Activity.Image" class="img-fluid" />

			}
		</div>

	</div>
</form>
<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
