@model FClub.Models.Models.Instructor
<div>
	<h4>Instructor: @Model.FulName</h4>
	<hr />
	<dl class="row">
		<div class="col-md-4">
			<img src="@Model.ProfilePicture" class="img-fluid img-thumbnail" />
		</div>
		<div class="col-md-8">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.FulName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.FulName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Mobile)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Mobile)
		</dd>
		@if (User.IsInRole("Admin"))
		{
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Address)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Address)
			</dd>
		}
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.About)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.About)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.HireDate)
		</dt>
		<dd class="col-sm-10">
			@Model.HireDate.ToShortDateString()
		</dd>
		<div class="ml-3 py-1">
			@if (!User.IsInRole("User"))
			{
				<a asp-action="Update" asp-route-id="@Model.Id">Edit</a>
			}
			<a asp-action="Index">Back to List</a>
		</div>


	</dl>

</div>

